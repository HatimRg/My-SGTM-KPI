APP_NAME="HSE KPI Tracker"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Optional: force https URL generation (enable in production)
FORCE_HTTPS=false

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hse_kpi_tracker
DB_USERNAME=root
DB_PASSWORD=

# Database backups
# Local backups are stored in backend/storage/app/backups/db
DB_BACKUP_RETENTION_DAYS=14

# Optional: set if mysqldump/mysql are not in PATH (Windows examples)
# MYSQLDUMP_PATH=C:\\xampp\\mysql\\bin\\mysqldump.exe
# MYSQL_PATH=C:\\xampp\\mysql\\bin\\mysql.exe

# Optional: placeholder toggle for a future Google Drive upload implementation
DB_BACKUP_GOOGLE_DRIVE_ENABLED=false

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Optional: when SESSION_DRIVER=redis
SESSION_CONNECTION=default
SESSION_STORE=

# Optional: secure cookies over HTTPS only (enable in production)
SESSION_SECURE_COOKIE=false

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Optional: Redis settings (enable CACHE_DRIVER/SESSION_DRIVER/QUEUE_CONNECTION = redis)
REDIS_CLIENT=phpredis
REDIS_DB=0
REDIS_CACHE_DB=1

# Optional: isolate keys per app/environment
CACHE_PREFIX=
REDIS_PREFIX=

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@hse-kpi.com"
MAIL_FROM_NAME="${APP_NAME}"

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:3000
SESSION_DOMAIN=localhost

FRONTEND_URL=http://localhost:5173

# Optional: CORS allowed origins (comma-separated). Example for production:
# CORS_ALLOWED_ORIGINS=https://kpi.company.tld
CORS_ALLOWED_ORIGINS=

# Optional: OVH Object Storage (S3-compatible). Set FILESYSTEM_DISK=s3 in production.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=
AWS_BUCKET=
AWS_ENDPOINT=
AWS_URL=
AWS_USE_PATH_STYLE_ENDPOINT=false
