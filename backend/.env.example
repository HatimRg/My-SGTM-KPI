APP_NAME="HSE KPI Tracker"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hse_kpi_tracker
DB_USERNAME=root
DB_PASSWORD=

# Database backups
# Local backups are stored in backend/storage/app/backups/db
DB_BACKUP_RETENTION_DAYS=14

# Optional: set if mysqldump/mysql are not in PATH (Windows examples)
# MYSQLDUMP_PATH=C:\\xampp\\mysql\\bin\\mysqldump.exe
# MYSQL_PATH=C:\\xampp\\mysql\\bin\\mysql.exe

# Optional: placeholder toggle for a future Google Drive upload implementation
DB_BACKUP_GOOGLE_DRIVE_ENABLED=false

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@hse-kpi.com"
MAIL_FROM_NAME="${APP_NAME}"

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:3000
SESSION_DOMAIN=localhost

FRONTEND_URL=http://localhost:5173
